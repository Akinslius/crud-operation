<h2> Edit Student Information</h2>
<form method="POST">
    <input type="hidden" name="id" value="@Model.studentInfo.id"/>
    <div class="row mb-3">
        <label class="col-md-3 form-label">Name </label>
        <div class="col-md-6">
            <input type="text" name="name" value="@Model.studentInfo.name" class="form-control" required/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-3 form-label">Date of Birth </label>
        <div class="col-md-6">
            <input type="date" name="dob" value="@Model.studentInfo.dob" class="form-control" required/>
        </div>
    </div>

    <div class="row mb-3">
         <label class="col-md-3 form-label">Gender </label>
         <div class="col-md-6">
             <select name="gender"  class="form-select" required>
             <option value="@Model.studentInfo.gender" disabled> @Model.studentInfo.gender </option>
             <option value="Male" >Male</option>
             <option value="Female" >Female</option>
             <option value="I prefer not to say" >I prefer not to say</option>
         </select>
         </div>         
    </div>

    <div class="row mb-3">
         <label class="col-md-3 col-form-label">Class </label>
         <div class="col-md-6" >
              <select name="studentClass" class="form-control" required>
             <option value="@Model.studentInfo.studentClass" disabled>@Model.studentInfo.studentClass </option>
             <option value="High School" >High School</option>
             <option value="Undergraduate" >Undergraduate</option>
             <option value="Graduate" >Graduate</option>
             <option value="Working Class" >Working Class</option>
        </select>
         </div>   
    </div>        

