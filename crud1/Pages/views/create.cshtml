<form method="POST">
    <div class="row mb-3">
        <label class="col-md-3 form-label">Name </label>
        <div class="col-md-6">
            <input type="text" name="name" placeholder="Enter Your Fullname" class="form-control" required/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-3 form-label">Date of Birth </label>
        <div class="col-md-6">
            <input type="date" name="dob" placeholder="Select Your Date of Birth" class="form-control" required/>
        </div>
    </div>

    <div class="row mb-3">
         <label class="col-md-3 form-label">Gender </label>
         <div class="col-md-6">
             <select name="gender" class="form-select" required>
             <option value="" disabled selected>Select Your Gender</option>
             <option value="Male" >Male</option>
             <option value="Female" >Female</option>
             <option value="I prefer not to say" >I prefer not to say</option>
         </select>
         </div>         
    </div>

    <div class="row mb-3">
         <label class="col-md-3 col-form-label">Class </label>
         <div class="col-md-6" >
              <select name="studentClass" class="form-control" required>
             <option value="" disabled selected>Select Your Class</option>
             <option value="High School" >High School</option>
             <option value="Undergraduate" >Undergraduate</option>
             <option value="Graduate" >Graduate</option>
             <option value="Working Class" >Working Class</option>
        </select>
         </div>   
    </div>        

